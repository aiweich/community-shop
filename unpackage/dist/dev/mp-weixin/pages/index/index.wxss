.home .bar .left image {
  width: 50rpx;
  height: 50rpx;
  padding-top: 30rpx;
}
.home .bar .right image {
  width: 50rpx;
  height: 50rpx;
  padding-top: 30rpx;
  padding-left: 55rpx;
}
.home swiper {
  width: 750rpx;
  height: 380rpx;
}
.home swiper image {
    width: 100%;
    height: 100%;
}
.home .nav_a {
  margin-top: 15px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-left: 15rpx;
  margin-right: 15rpx;
}
.home .nav_a .nav_item_a {
    width: 20%;
    text-align: center;
    margin-top: 10rpx;
}
.home .nav_a .nav_item_a view {
      width: 100rpx;
      height: 100rpx;
      background-color: #d81e06;
      border-radius: 60rpx;
      margin: 0px auto;
      line-height: 100rpx;
      color: #FFFFFF;
      font-size: 50rpx;
}
.home .nav_a .nav_item_a text {
      font-size: 25rpx;
      color: #303133;
}
.home .nav_b {
  margin-bottom: 15px;
  margin-top: 10rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-left: 15rpx;
  margin-right: 15rpx;
}
.home .nav_b .nav_item_b {
    width: 20%;
    text-align: center;
    margin-top: 10rpx;
}
.home .nav_b .nav_item_b view:nth-child(1) {
      width: 100rpx;
      height: 100rpx;
      background-color: #d81e06;
      border-radius: 60rpx;
      margin: 0px auto;
      line-height: 100rpx;
      color: #FFFFFF;
      font-size: 50rpx;
}
.home .nav_b .nav_item_b text {
      font-size: 25rpx;
      color: #303133;
}
.home .gd {
  margin-top: 15px;
}
.home .gd image {
    width: 720rpx;
    height: 192rpx;
}
.home .hot_goods {
  background-color: #eee;
  margin-top: 5px;
  overflow: hidden;
}
.home .hot_goods .title {
    height: 50px;
    line-height: 50px;
    color: #d81e06;
    text-align: center;
    letter-spacing: 20px;
    background: #FFFFFF;
    margin: 5px 0;
}

